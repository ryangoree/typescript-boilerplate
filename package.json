{
  "name": "typescript-boilerplate",
  "version": "0.0.0",
  "description": "TypeScript library boilerplate with tests, docs, builds, and CI/CD.",
  "license": "Apache-2.0",
  "author": "ryan goree (https://github.com/ryangoree)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryangoree/typescript-boilerplate.git"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./testing": {
      "require": {
        "types": "./dist/testing.d.cts",
        "default": "./dist/testing.cjs"
      },
      "import": {
        "types": "./dist/testing.d.ts",
        "default": "./dist/testing.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest --reporter=verbose",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && biome check --diagnostic-level error . ",
    "check:package": "publint",
    "fix": "biome check --diagnostic-level error . --write",
    "fix:unsafe": "npm run fix --unsafe",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "build:docs": "typedoc",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@changesets/cli": "^2.29.6",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "publint": "^0.3.12",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#src/*": "./dist/*.js"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
