{
  "name": "typescript-boilerplate",
  "version": "0.0.0",
  "description": "A TypeScript boilerplate project with testing, documentation, and build scripts.",
  "license": "Apache-2.0",
  "author": "ryan goree (https://github.com/ryangoree)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryangoree/typescript-boilerplate.git"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./testing": {
      "require": {
        "types": "./dist/testing.d.cts",
        "default": "./dist/testing.cjs"
      },
      "import": {
        "types": "./dist/testing.d.ts",
        "default": "./dist/testing.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "build:docs": "typedoc",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest --reporter=verbose",
    "test:ci": "vitest run",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome lint --diagnostic-level error .",
    "lint:fix": "bun lint --fix",
    "lint:fix:unsafe": "bun lint:fix --unsafe",
    "lint:package": "publint",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "publint": "^0.3.12",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.9",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#src/*": "./dist/*.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
